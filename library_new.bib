doi = {10.1152/ajpheart.00875.2009},
file = {:C$\backslash$:/Users/rmgpssm/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Davies et al. - 2010 - The arterial reservoir pressure increases with aging and is the major determinant of the aortic augmentation inde.pdf:pdf},
