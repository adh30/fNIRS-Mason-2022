journal = {NeuroImage},
keywords = {Clinical application,Diffused optical imaging,Human brain mapping,Optical topography,Probabilistic brain atlas,Spatial normalization,Talairach coordinate system,Transcranial magnetic stimulation},
number = {4},
pages = {1506--1518},
title = {{Virtual spatial registration of stand-alone fNIRS data to MNI space}},
