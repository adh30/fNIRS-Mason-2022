doi = {10.1364/boe.4.001366},
file = {:C$\backslash$:/Users/rmgpssm/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Barker, Aarabi, Huppert - 2013 - Autoregressive model based algorithm for correcting motion and serially correlated errors in fNIRS.pdf:pdf},
issn = {2156-7085},
journal = {Biomedical Optics Express},
number = {8},
pages = {1366},
title = {{Autoregressive model based algorithm for correcting motion and serially correlated errors in fNIRS}},
volume = {4},
year = {2013}
}
