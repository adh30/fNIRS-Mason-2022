issn = {18789307},
journal = {Developmental Cognitive Neuroscience},
keywords = {Bilingual children,Event-related potentials (ERP),Inhibitory control,Lateralized readiness potentials (LRP),Response inhibition,Stroop task},
pages = {100740},
pmid = {31999562},
publisher = {Elsevier Ltd},
title = {{Neural mechanisms of response-preparation and inhibition in bilingual and monolingual children: Lateralized Readiness Potentials (LRPs) during a nonverbal Stroop task}},
