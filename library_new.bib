file = {:C$\backslash$:/Users/rmgpssm/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Kirilina et al. - 2012 - The physiological origin of task-evoked systemic artefacts in functional near infrared spectroscopy.pdf:pdf},
